
<div class="container">

  <div class="row mb-4 mt-4">
    <div class="col-md-10">
      <h1>New List</h1>
    </div>
    <div class="col-md-2">
      <%= link_to 'Back to Lists', lists_path, class: "btn btn-secondary mt-3" %>
    </div>
  </div>

  <div class="row mb-4 mt-4">
      <%= simple_form_for @list, html: { class: 'form-horizontal p-4' } do |f| %>

        <div class="form-group mb-3">
          <%= f.input :name, label: "Name", input_html: { class: 'form-control p-2 border rounded' } %>
        </div>

        <div class="form-group mb-3">
          <%= f.input :photo, as: :file, input_html: { class: 'p-2' } %>
        </div>

        <div class="form-group mb-3">
          <%= f.button :submit, "Submit", class: "btn btn-primary px-4 py-2" %>
        </div>
      <% end %>
  </div>

</div>
