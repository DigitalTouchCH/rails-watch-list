
<div class="container">
  <div class="row mb-4 mt-4">
    <div class="col-md-10">
      <h1>New List</h1>
    </div>
    <div class="col-md-2">
      <%= link_to 'Back to Lists', lists_path, class: "btn btn-secondary mt-3" %>
    </div>
  </div>

  <%= simple_form_for @list, html: { class: 'form-horizontal' } do |f| %>
    <div class="form-group">
      <%= f.input :name, label: "Name", input_html: { class: 'form-control' } %>
    </div>

    <div class="form-group">
      <%= f.button :submit, class: "btn btn-primary" %>
    </div>
  <% end %>

</div>
