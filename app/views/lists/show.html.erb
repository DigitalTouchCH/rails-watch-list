<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
  <h1><%= @list.name %></h1>
</div>







<ul>
  <% @list.bookmarks.each do |bookmark| %>
    <li>
      <strong><%= bookmark.movie.title %></strong> :
      <%= bookmark.comment %>
    </li>
  <% end %>
</ul>





<%= link_to 'Add Bookmark', new_list_bookmark_path(@list),  class: "btn btn-primary" %>
<%= link_to 'Back to Lists', lists_path, class: "btn btn-primary" %>
