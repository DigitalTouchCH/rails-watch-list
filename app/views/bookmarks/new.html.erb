<div class="container">
  <div class="row mb-4 mt-4">
    <div class="col-md-10">
      <h1>New Bookmark</h1>
    </div>
    <div class="col-md-2">
      <%= link_to 'Back to List', list_path(@list), class: "btn btn-secondary mt-3" %>
    </div>
  </div>

  <%= simple_form_for [@list, @bookmark], html: { class: 'form-horizontal' } do |f| %>
    <div class="form-group">
      <%= f.association :movie, label_method: :title, value_method: :id, prompt: 'Choose a movie', input_html: { class: 'form-control' } %>
    </div>

    <div class="form-group">
      <%= f.input :comment, input_html: { class: 'form-control' } %>
    </div>

    <div class="form-group">
      <%= f.button :submit, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
